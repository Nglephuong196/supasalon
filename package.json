{
  "name": "supasalon",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo dev --filter=web --filter=api",
    "dev:all": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "dev:mobile": "turbo dev --filter=mobile",
    "dev:mobile:android": "turbo dev:android --filter=mobile",
    "dev:mobile:android:offline": "pnpm --filter mobile dev:android:offline",
    "dev:mobile:ios": "turbo dev:ios --filter=mobile",
    "android:emulator": "powershell -NoProfile -Command \"& \\\"$env:ANDROID_HOME\\\\emulator\\\\emulator\\\" -avd Medium_Phone_API_36.1\"",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "lint": "turbo lint",
    "db:generate": "turbo db:generate --filter=api",
    "db:migrate:local": "turbo db:migrate:local --filter=api",
    "db:studio": "turbo db:studio --filter=api"
  },
  "devDependencies": {
    "turbo": "^2.8.1"
  },
  "dependencies": {
    "wangler": "^0.0.8",
    "wrangler": "^4.61.1"
  },
  "pnpm": {
    "overrides": {
      "cookie": ">=1.1.1",
      "esbuild": ">=0.25.0"
    }
  }
}
