{
    "name": "supasalon",
    "private": true,
    "packageManager": "bun@1.3.9",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo dev --filter=salon-web --filter=salon-api",
        "dev:all": "turbo dev",
        "dev:web": "turbo dev --filter=salon-web",
        "dev:api": "turbo dev --filter=salon-api",
        "dev:mobile": "turbo dev --filter=mobile",
        "dev:mobile:android": "turbo dev:android --filter=mobile",
        "dev:mobile:android:offline": "bun --filter=mobile run dev:android:offline",
        "dev:mobile:ios": "turbo dev:ios --filter=mobile",
        "android:emulator": "powershell -NoProfile -Command \"& \\\"$env:ANDROID_HOME\\\\emulator\\\\emulator\\\" -avd Medium_Phone_API_36.1\"",
        "build": "turbo build",
        "build:web": "turbo build --filter=salon-web",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "db:generate": "turbo db:generate --filter=salon-api",
        "db:migrate:local": "turbo db:migrate:local --filter=salon-api",
        "db:studio": "turbo db:studio --filter=salon-api"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "turbo": "^2.8.1"
    },
    "dependencies": {
        "wangler": "^0.0.8",
        "wrangler": "^4.61.1"
    },
    "overrides": {
        "cookie": ">=1.1.1",
        "esbuild": ">=0.25.0"
    }
}
