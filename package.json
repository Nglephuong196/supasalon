{
  "name": "salon-pro",
  "private": true,
  "packageManager": "npm@11.6.2",
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:mobile": "turbo build --filter=mobile",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:mobile": "turbo dev --filter=mobile",
    "lint": "turbo lint",
    "lint:web": "turbo lint --filter=web",
    "lint:mobile": "turbo lint --filter=mobile",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:start": "npx supabase start",
    "db:stop": "npx supabase stop",
    "db:types": "npx supabase gen types typescript local > packages/database/src/database.types.ts",
    "db:push": "npx supabase db push",
    "db:reset": "npx supabase db reset"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
