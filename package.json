{
  "name": "salon-pro",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:web": "bun run --filter web dev",
    "dev:mobile": "bun run --filter mobile dev",
    "dev:mobile:web": "bun run --filter mobile dev:web",
    "dev:mobile:ios": "bun run --filter mobile dev:ios",
    "dev:mobile:android": "bun run --filter mobile dev:android",
    "build:web": "bun run --filter web build",
    "build:mobile:web": "bun run --filter mobile build:web",
    "build:mobile:ios": "bun run --filter mobile build:ios",
    "build:mobile:android": "bun run --filter mobile build:android",
    "lint": "bun run --filter '*' lint",
    "lint:web": "bun run --filter web lint"
  }
}
