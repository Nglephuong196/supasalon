{
    "mcpServers": {
        "context7": {
            "command": "bunx",
            "args": [
                "--bun",
                "@upstash/context7-mcp@latest"
            ]
        },
        "better-auth": {
            "command": "bunx",
            "args": [
                "--bun",
                "@better-auth/mcp@latest"
            ]
        },
        "hono-docs": {
            "command": "bunx",
            "args": [
                "--bun",
                "@chr33s/mcpdoc",
                "https://hono.dev/llms-full.txt"
            ]
        },
        "svelte": {
            "command": "bunx",
            "args": [
                "--bun",
                "@sveltejs/mcp"
            ]
        }
    }
}